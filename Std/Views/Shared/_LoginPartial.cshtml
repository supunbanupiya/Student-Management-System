@using Microsoft.AspNet.Identity

@if (User.Identity.IsAuthenticated)
{
    <text>
        <ul class="nav navbar-nav navbar-right">
            <li>
                <p class="navbar-text">Hello, @User.Identity.GetUserName()!</p>
            </li>
            <li>@Html.ActionLink("Manage Account", "Manage", "Account")</li>
            <li>@Html.ActionLink("Log off", "LogOff", "Account")</li>
        </ul>
    </text>
}
else
{
    <text>
        <ul class="nav navbar-nav navbar-right">
        @*    <li>@Html.ActionLink("Register", "Register", "Login")</li>*@

            <li>@Html.ActionLink("Login", "Index", "Login", routeValues:null,htmlAttributes:new {id="loginLink"})</li>
        </ul>
    </text>
}
